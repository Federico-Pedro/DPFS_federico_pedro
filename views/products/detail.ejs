<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

    <body>

        <!-- HEADER -->
        <%- include('../partials/header') %>

            <!-- HEROE -->
            <main class="main">
                <div class="presentation-container">
                    <div class="main-pic">
                        <img src="/images/products/<%= product.img %>" alt="">
                    </div>
                    <div class="presentation">
                        <h1 class="title">
                            <%= product.name %>
                        </h1>
                        <h4 class="description">
                            <%= product.description %>
                        </h4>
                        <h4 class="description">
                            <%= product.material %>
                        </h4>
                        <h3 class="price">$ <%= product.price %>
                        </h3>
                        <% if(user && user.role !=='admin') { %>
                            <form action="/add/<%= product.product_id %>" method="POST">
                                <button class="cart-button">Agregar al carrito</button>
                            </form>
                            <% } %>
                                <a href="/products/<%= product.category %>">
                                    <h6>
                                        < Back </h6>
                                </a>
                    </div>
                </div>

            </main>

            <!-- FOOTER -->
            <%- include('../partials/footer') %>

    </body>

</html>